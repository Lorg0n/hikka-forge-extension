{
    "manifest_version": 3,
    "name": "Hikka Forge",
    "version": "1.0.0",
    "description": "Universal extension",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webNavigation",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
        "matches": ["<all_urls>"], 
        "js": [
            "src/content_loader.js" 
        ],
        "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
        "resources": [
            "src/content.js", 
            "src/*.js"
        ],
        "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}